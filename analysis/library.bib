issn = {22251154},
journal = {Climate},
keywords = {climate departure,climate-departure,crop,crop suitability,ecocrop,food security},
number = {9},
pages = {101},
title = {{Defining Crop–climate Departure in West Africa: Improved Understanding of the Timing of Future Changes in Crop Suitability}},
