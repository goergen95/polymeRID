file = {:home/marus200/Documents/library/Pueppke, Zhang, Nurtazin/Pueppke, Zhang, Nurtazin - 2018 - Irrigation in the Ili River basin of central Asia From ditches to dams and diversion.pdf:pdf},
issn = {20734441},
journal = {Water (Switzerland)},
keywords = {Ili River,Irrigated agriculture,Loess,Salinization,Sierozemsoils,Transboundary river basins},
number = {11},
pages = {1--24},
title = {{Irrigation in the Ili River basin of central Asia: From ditches to dams and diversion}},
volume = {10},
year = {2018}
