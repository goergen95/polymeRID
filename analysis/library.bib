file = {:home/marus200/Documents/library/Falt{\'{y}}nov{\'{a}}, Nov{\'{y}}/Falt{\'{y}}nov{\'{a}}, Nov{\'{y}} - 2014 - Airborne laser scanning and image processing techniques for archaeological prospection.pdf:pdf},
issn = {16821750},
keywords = {DTM,Digital terrain model,LiDAR,Non-invasive archaeology,Shaded relief},
number = {5},
pages = {231--235},
