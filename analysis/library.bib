journal = {Remote Sensing},
keywords = {Cropping intensity,Gross sown area,Land cover,Land use,Phenology cycles,Planted area},
number = {3},
pages = {2473--2493},
title = {{Mapping crop cycles in China using MODIS-EVI time series}},
volume = {6},
year = {2014}
