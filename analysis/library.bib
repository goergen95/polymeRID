file = {:home/marus200/Documents/library/Karkauskaite, Tagesson, Fensholt/Karkauskaite, Tagesson, Fensholt - 2017 - Evaluation of the plant phenology index (PPI), NDVI and EVI for start-of-season trend analysis.pdf:pdf},
issn = {20724292},
journal = {Remote Sensing},
