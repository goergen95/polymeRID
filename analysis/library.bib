journal = {Journal of Agricultural and Food Chemistry},
keywords = {FT-IR spectroscopy,Glycerol,Outliers,Principal component analysis,Wine},
number = {12},
pages = {3726--3735},
title = {{Principal component analysis applied to Fourier transform infrared spectroscopy for the design of calibration sets for glycerol prediction models in wine and for the detection and classification of outlier samples}},
