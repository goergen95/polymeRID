issn = {18736386},
journal = {International Journal of Law and Psychiatry},
keywords = {CRPD,Disabilities,Involuntary treatment,Mental illness,Rights},
number = {3},
pages = {245--252},
title = {{Mental health law and the UN Convention on the rights of persons with disabilities}},
url = {https://www.cambridge.org/core/product/identifier/S0007125000277040/type/journal{\_}article},
volume = {37},
