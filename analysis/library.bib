doi = {10.1016/j.scitotenv.2016.09.145},
issn = {18791026},
journal = {Science of the Total Environment},
keywords = {Groundwater,Irrigation mode,Nitrate,Overexploitation,Water quality},
number = {Supplement C},
pages = {760--770},
title = {{Impact of agricultural practices on groundwater quality in intensive irrigated area of Chtouka-Massa, Morocco}},
