journal = {Global and Planetary Change},
keywords = {Climate change,Glaciers,Hydrological change,Pamir,River runoff,Seasonal snow cover,Tien Shan},
month = {nov},
pages = {4--25},
publisher = {Elsevier},
title = {{What do we know about past changes in the water cycle of Central Asian headwaters? A review}},
url = {http://www.sciencedirect.com/science/article/pii/S0921818113000313},
