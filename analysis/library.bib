doi = {10.1021/jf035431q},
file = {:home/marus200/Documents/library/Nieuwoudt et al/Nieuwoudt et al. - 2004 - Principal component analysis applied to Fourier transform infrared spectroscopy for the design of calibration.pdf:pdf},
