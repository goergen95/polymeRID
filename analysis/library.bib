doi = {10.1046/j.1440-1770.1998.00069.x},
file = {:home/marus200/Documents/library/Petr, Mitrofanov/Petr, Mitrofanov - 1998 - The impact on fish stocks of river regulation in Central Asia and Kazakhstan.pdf:pdf},
isbn = {1320-5331},
