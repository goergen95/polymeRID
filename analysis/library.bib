journal = {Climate},
keywords = {cordex,crop suitability,crop-climate departure,ecocrop,planting month,west africa},
number = {9},
pages = {102},
title = {{Assessing Future Spatio-Temporal Changes in Crop Suitability and Planting Season over West Africa: Using the Concept of Crop-Climate Departure}},
