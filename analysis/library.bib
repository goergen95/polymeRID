file = {:home/marus200/Documents/library/L{\"{o}}w et al/L{\"{o}}w et al. - 2015 - Mapping abandoned agricultural land in Kyzyl-Orda, Kazakhstan using satellite remote sensing.pdf:pdf},
isbn = {01436228 (ISSN)},
issn = {01436228},
journal = {Applied Geography},
keywords = {Abandoned cropland mapping,Aral sea,Central Asia,Decision fusion,Land use trajectories,Time-series},
pages = {377--390},
title = {{Mapping abandoned agricultural land in Kyzyl-Orda, Kazakhstan using satellite remote sensing}},
